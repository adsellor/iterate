{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "else",
          "warn"
        ]
      }
    ],
    "block-no-empty": null,
    "unit-whitelist": [
      "em",
      "rem",
      "s",
      "%",
      "vw",
      "vh",
      "px",
      "deg"
    ]
  }
}